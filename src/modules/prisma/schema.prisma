generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:somewordpress@localhost:3306/wordpress"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  teamId   Int?
  team     Team?   @relation("UserTeam", fields: [teamId], references: [id])
  isLeader Boolean @default(false)
  // Để đối ứng với leader của Team
  leadingTeam Team? @relation("TeamLeader")
}

model Team {
  id        Int     @id @default(autoincrement())
  name      String
  leaderId  Int?    @unique
  leader    User?   @relation("TeamLeader", fields: [leaderId], references: [id])
  members   User[]  @relation("UserTeam")
}